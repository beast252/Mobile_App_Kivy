<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding:15,15
            spacing:20,20
            RelativeLayout:
                Label:
                    text: ''' "Quotes on Your Mood" by Shahbaz Khan '''
                    font_size: '13sp'
                    size_hint:0.4,0.4
                    color:0.7,0.5,1,0.8
                    pos_hint:{'center_x':0.5,'center_y':0.8}
            Label:
                text: "User Login"
                bold: True
                font_size: '20sp'
            TextInput:
                size_hint:0.45,0.45
                id: username
                hint_text:"Username"
                write_tab: False
                multiline: False
            TextInput:
                size_hint:0.45,0.45
                id: password
                password: True
                hint_text:"Password"
                write_tab: False
                multiline: False
            RelativeLayout:
                Button:
                    text:"Login"
                    on_release:root.login(root.ids.username.text,root.ids.password.text)
                    background_color: 0.3, 0.4, 1, 0.9
                    size_hint:0.3,0.4
                    pos_hint:{'center_x':0.5,'center_y':0.6}
            Label:
                id: login_wrong
                text:""
        GridLayout:
            cols: 2
            size_hint:0.2,0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "Forgot Password?"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1
                on_release:root.forgot()
            Button:
                text: "Signup Now"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1
                on_release:root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        padding:25,25
        spacing:25,25
        Label:
            text:"Sign up for Enlightenment!"
            color:0.7,0.5,1,0.8
        TextInput:
            id:username
            size_hint:0.37,0.37
            hint_text:"Username"
            write_tab: False
            multiline: False
        TextInput:
            id:password
            size_hint:0.37,0.37
            hint_text:"Password"
            write_tab: False
            multiline: False
        Label:
            id: user_exist
            text: ""
        
        RelativeLayout:
            Button:
                text:"Submit"
                size_hint:0.3,0.4
                background_color: 0.3, 0.4, 1, 0.9
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release:root.add_user(root.ids.username.text,root.ids.password.text)
        RelativeLayout:
            Button:
                background_color: 0.7, 0.4, 0.9, 0.8
                text:"Back To Login"
                size_hint:0.48,0.4
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release:root.back_to_login()

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30,30
        spacing: 30,30
        Label:
            id: sign_up
            text: ''' "Sign Up Successful" '''
            font_size: '26sp'
            size_hint:0.4,0.4
            color:1,0.15,0.15,0.9
            pos_hint:{'center_x':0.5,'center_y':0.5}
        RelativeLayout:
            Button:
                background_color: 0.7, 0.4, 0.9, 0.8
                text: "Go to Login"
                size_hint:0.4,0.18
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release:root.go_to_login()

<ForgotPasswordScreen>:
    GridLayout:
        cols:1
        padding:25,25
        spacing:25,25
        Label:
            text:"Change Password!"
            color:0.7,0.5,1,0.8
        TextInput:
            id:username
            size_hint:0.37,0.37
            hint_text:"Current Username"
            write_tab: False
            multiline: False
        TextInput:
            id:password
            size_hint:0.37,0.37
            hint_text:"New Password"
            write_tab: False
            multiline: False
        Label:
            id: user_exist
            text: ""
        
        RelativeLayout:
            Button:
                text:"Change Password"
                size_hint:0.55,0.4
                background_color: 1, 0.3, 0.3, 0.9
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release:root.password_change(root.ids.username.text,root.ids.password.text)
        GridLayout:
            cols: 2
            size_hint:0.2,0.2
            padding: 10,10
            spacing: 10,10
            Button:
                background_color: 0.7, 0.4, 0.9, 0.8
                text:"Back to Login"
                size_hint:0.4,0.4
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_press:root.back_to_login()
            Button:
                background_color: 0.7, 0.4, 0.9, 0.8
                text:"Sign Up"
                size_hint:0.4,0.4
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_press:root.go_to_sign_up()


<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30,30
        sapcing: 30,30
        RelativeLayout:
            ImageButton:
                on_release: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35,0.35
                pos_hint: {'center_x':0.8,'center_y':0.8}
        Label:
            text: "How do you feel right now?"
            font_size: '16sp'
            size_hint:0.4,0.4
            color:0.7,0.5,1,0.8
            pos_hint:{'center_x':0.5,'center_y':0.5}
        TextInput:
            id:feeling
            hint_text:"You can try: Happy, Sad, Unloved..."
            size_hint:0.37,0.37
            write_tab: False
            multiline: False
        RelativeLayout:
            Button:
                background_color: 0.3, 0.4, 1, 0.9
                text:"Enlighten Me"
                size_hint:0.48,0.4
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release:root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id:quote
                text: ""
                text_size: self.width,None
                size_hint_y: None
                height: self.texture_size[1]
<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"
    ForgotPasswordScreen:
        name:"forgot_password_screen"

